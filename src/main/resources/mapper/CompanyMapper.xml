<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.star.mapper.CompanyMapper">


    <resultMap id="CompanyMap" type="Company" autoMapping="true">
        <id property="id" column="id"/>
        <collection property="userList" autoMapping="true" ofType="User">
            <id property="id" column="u_id"/>
            <association property="Role" javaType="com.star.pojo.Role" autoMapping="true">
                <id property="id" column="userRoleId"/>
            </association>
        </collection>
    </resultMap>
    <!-- 分页查询全部信息 -->
    <select id="getCompanyList" resultType="Company">
        select *
        from schp_company
        order by id desc
        limit #{currentPage},#{pageSize}
    </select>

    <!-- 分页查询全部信息Map -->
    <select id="getCompanyMap" resultMap="CompanyMap">
        select *, u.id as 'u_id'
        from schp_company c,
             schp_user u,
             schp_role r
        where c.id = u.companyId
          and u.userRoleId = r.id
        order by c.id desc
        limit #{currentPage},#{pageSize}
    </select>

    <!-- 统计职位总记录数 -->
    <select id="getTotalCount" resultType="int">

        select count(1)
        from schp_company

    </select>

    <!-- 删除职位信息 -->
    <delete id="delCompany" parameterType="com.star.pojo.Company">
        delete
        from schp_company
        where id = #{id}
    </delete>

    <!--查询文章分类  -->


    <!--发布职位信息-->


</mapper>